<%include ../header%>
</head>
<div class="container table-responsive" style="width: 960px;padding-top: 20px">
    <h1><%=ten%></h1>
    <a href="/<%=ten%>/them" title="thêm <%=ten%>"><button class="btn btn-primary" style="margin: 10px" >Thêm</button></a>
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên</th>
                <th>Nội dung</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
        	<% for (var i = 0; i < data.length; i++) { -%>
        		<tr>
        			<td><%=data[i].id%></td>
        			<td><%=data[i].ten%></td>
        			<td><%=data[i].noidung%></td>
        			<td><ul>
        					<li><a href="/thongbao/sua/<%=data[i].id%>">Sửa</a></li>
        					<li><a href="/thongbao/xoa/<%=data[i].id%>">Xóa</a></li>
        				</ul>
        			</td>
        		</tr>
        	<% } -%>
        </tbody>
    </table>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="/javascripts/admin/jquery.dataTables.min.js"></script>
    <script src="/javascripts/admin/dataTables.bootstrap.js"></script>
    <script src="/javascripts/admin/tables.js"></script>
</div>