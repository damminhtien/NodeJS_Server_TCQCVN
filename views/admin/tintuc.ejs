<%include ../header%>
</head>
<div class="container table-responsive" style="width: 100%">
    <h1><%=ten%></h1>
    <a href="/<%=ten%>/viet/byid=1" title="thêm <%=ten%>"><button class="btn btn-primary" style="margin: 10px" >Thêm</button></a>
    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên</th>
                <th>Tóm tắt</th>
                <th>Nội dung</th>
                <th>Ngày đăng</th>
                <th>Id quản trị đăng</th>
                <th>Url ảnh</th>
                <th>Lượt xem</th>
                <th>Ghi chú</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody id="admindata">
        	<% for (var i = 0; i < data.length; i++) { -%>
        		<tr>
        			<td><%=data[i].id%></td>
        			<td><%=data[i].ten%></td>
                    <td><%=data[i].tomtat.substring(0,200)%></td>
                    <td style="max-height: 100px;"><%=data[i].noidung.substring(0,200)%></td>
                    <td><%=data[i].ngaydang%></td>
                    <td><%=data[i].idquantridang%></td>
                    <td><%=data[i].urlanh%></td>
                    <td><%=data[i].luotxem%></td>
                    <td><%=data[i].ghichu%></td>
                    <td>
                        <ul>
                            <li><a href="/tintuc/sua/<%=data[i].id%>">Sửa</a></li>
                            <li><a href="/tintuc/sua/<%=data[i].id%>">Xóa</a></li>
                        </ul>
                    </td>
        		</tr>
        	<% } -%>
        </tbody>
    </table>
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="/javascripts/admin/jquery.dataTables.min.js"></script>
    <script src="/javascripts/admin/dataTables.bootstrap.js"></script>
    <script src="/javascripts/admin/tables.js"></script>
</div>