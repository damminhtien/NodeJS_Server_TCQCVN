<%include ../header%>
<link rel="stylesheet" href="/stylesheets/top.css">
</head>
<body>
    <div class="main">
        <%include ../top%>
        <div class="container table-responsive" style="width: 100%">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
                <thead>
                    <tr>
                        <th>Ảnh minh họa</th>
                        <th>Miêu tả</th>
                    </tr>
                </thead>
                <tbody id="admindata">
                    <% for (var i = 0; i < data.length; i++) { -%>
                        <tr>
                            <td><img src="/images/<%=data[i].urlanh%>" width="150px;"></td>
                            <td>
                                <h3><%=data[i].ten%></h3>
                                <p><%=data[i].tomtat%></p>
                            </td>
                        </tr>
                    <% } -%>
                </tbody>
            </table>
        </div>
        <%include ../footer%>
    </div>    
    <script src="https://code.jquery.com/ui/1.10.3/jquery-ui.js"></script>
    <script src="/javascripts/admin/jquery.dataTables.min.js"></script>
    <script src="/javascripts/admin/dataTables.bootstrap.js"></script>
    <script src="/javascripts/admin/tables.js"></script>    
</body>

