<%include ../header%>
<script src='/javascripts/tinymce/js/tinymce/tinymce.min.js'></script>
<script src='/javascripts/tinymce/js/tinymce/jquery.tinymce.min.js'></script>
<script src='/javascripts/tintuc/suaTintuc.js'></script>
</head>

    <body>
        <form method="post" accept-charset="utf-8" enctype="multipart/form-data" class="form-horizontal">
            <div class="form-group">
                <input type="hidden" class="form-control" name="thoigian" value="<%= new Date().toISOString().replace(/T/, ' ').replace(/\..+/, '').replace(/ /g, '_')%>" >
                <label class="control-label col-sm-2">Tiêu đề:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="ten" placeholder="Tiêu đề..." value="<%=tintuc.ten%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Tóm tắt:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="tomtat" placeholder="Tóm tắt" value="<%=tintuc.tomtat%>">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-2">Nội dung:</label>
                <div class="col-sm-10">
                    <textarea id="mytextarea" name="noidung" placeholder="Nội dung chinh..." class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10"><button type="submit" class="btn btn-success" class="form-control">Đăng bài</button></div>
            </div>
            
        </form>
    </body>

    </html>